<Window x:Class="WPF_15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label>Username:</Label>
        <TextBox Name="tbUsername" Width="150" HorizontalAlignment="Left"></TextBox>
        <Label>Password:</Label>
        <PasswordBox Width="150" HorizontalAlignment="Left" PasswordChar="*" MaxLength="8"></PasswordBox>
        <Button Margin="0, 20, 0,0" Width="150" HorizontalAlignment="Left" Click="Button_Click">Login</Button>
    </StackPanel>
</Window>
