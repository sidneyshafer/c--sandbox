<Window x:Class="WPF_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label FontWeight="Bold">Pizza Toppings</Label>
        <CheckBox Name="cbAllToppings" IsThreeState="true" Checked="cbAllCheckedChange" Unchecked="cbAllCheckedChange">Add all</CheckBox>
        <StackPanel Margin="10">
            <CheckBox Name="cbHam" Checked="cbSingleCheckedChange" Unchecked="cbSingleCheckedChange">
                <TextBlock>Ham <Run Foreground="Red" FontWeight="Bold">Spicy</Run></TextBlock>
            </CheckBox>
            <CheckBox Name="cbBlackOlives" Checked="cbSingleCheckedChange" Unchecked="cbSingleCheckedChange">Black Olives</CheckBox>
            <CheckBox Name="cbExtraCheese" Checked="cbSingleCheckedChange" Unchecked="cbSingleCheckedChange">Extra Cheese</CheckBox>
        </StackPanel>
    </StackPanel>
</Window>
